<h1>Editing Message #<%= @message.id %></h1>

<%= form_tag(message_url(@message), method: 'patch') do %>
  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @message.title %>
  </div>

  <div>
    <%= label_tag :body %><br />
    <%= text_area_tag :body, @message.body %>
  </div>

  <div>
    <%= label_tag :member_id %><br />
    <%= number_field_tag :member_id, @message.member_id %>
  </div>

  <div>
    <%= label_tag :family_id %><br />
    <%= number_field_tag :family_id, @message.family_id %>
  </div>

  <div>
    <%= submit_tag "Update Message" %>
  </div>
<% end %>
